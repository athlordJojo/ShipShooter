{
  "name": "ShipShooter",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "build": "npm run build-dep && npm run build-js",
    "build-dep": "npm install",
    "build-js": "browserify app/src/*.js > app/static/js/bundle.js && npm run build-copy-deps",
    "build-copy-deps": "cp node_modules/angular/angular.min.js app/static/js/",
    "watch-src": "watch 'npm run build' app/src "
  },
  "dependencies": {
    "angular": "^1.4.1",
    "body-parser": "~1.12.0",
    "browserify": "^10.2.4",
    "cookie-parser": "~1.3.4",
    "debug": "~2.1.1",
    "express": "~4.12.2",
    "jade": "~1.9.2",
    "morgan": "~1.5.1",
    "serve-favicon": "~2.2.0",
    "watch": "^0.16.0"
  }
}
